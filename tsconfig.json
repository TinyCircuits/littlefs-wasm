{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2015"]
  },
  "include": ["src/**/*.js"]
}
